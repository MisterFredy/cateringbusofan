<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_pilihan_scrollview"
    android:scrollbars="none"
    android:fillViewport="true"
    android:background="#EEEEEE"
    tools:context="com.akhmadfaizin.cateringbusofanowner.DetailItemActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="9dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="#FFFFFF"
                android:padding="22dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_item_pilihan"
                    android:layout_width="310dp"
                    android:layout_height="310dp"/>
                <TextView
                    android:id="@+id/tv_nama_item_pilihan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="26sp"
                    android:textColor="#222222"
                    android:textAlignment="center"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"/>
                <TextView
                    android:id="@+id/tv_note_harga_per_porsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textColor="#222222"
                    android:textAlignment="center"
                    android:text="Tambahan Harga Per Porsi"/>
                <TextView
                    android:id="@+id/tv_harga_item_pilihan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textColor="#159F5C"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/tv_item_pilihan_deskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="34dp"
                    android:textSize="16sp"
                    android:textColor="#616161"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>