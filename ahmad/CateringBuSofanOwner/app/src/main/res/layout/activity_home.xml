<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="com.akhmadfaizin.cateringbusofanowner.HomeActivity">

    <ImageView
        android:id="@+id/logo_busofan"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/catering_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bu Sofan"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textSize="36sp"
        android:textColor="#fff"
        android:layout_below="@id/logo_busofan"/>

    <TextView
        android:id="@+id/catering_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/catering_name"
        android:text="@string/catering_desc"
        android:layout_marginTop="6dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_below="@id/catering_desc">
        <ImageButton
            android:layout_width="180dp"
            android:layout_height="68dp"
            android:onClick="openLogin"
            android:background="@drawable/btn_login_home"/>
    </LinearLayout>
</RelativeLayout>
