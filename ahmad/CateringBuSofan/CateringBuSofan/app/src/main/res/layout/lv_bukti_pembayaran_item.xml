<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="110dp"
    android:paddingBottom="13dp"
    android:background="#991F1F">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/iv_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:layout_marginLeft="15dp" />

    <RelativeLayout
        android:id="@+id/rl_popUpMenu"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
        <ImageView
            android:layout_width="4dp"
            android:layout_height="18dp"
            android:src="@drawable/three_dots_pesanan"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="13dp"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/iv_photo">
        <TextView
            android:id="@+id/tv_nominal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D0CACA"
            android:textSize="16sp"
            android:text="Rp 7,800,000"/>
        <TextView
            android:id="@+id/tv_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D0CACA"
            android:textSize="14sp"
            android:text="20 Mei 2018"/>
        <TextView
            android:id="@+id/tv_konfirmasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D0CACA"
            android:textSize="14sp"
            android:text="Belum Dicek"/>
    </LinearLayout>
</RelativeLayout>