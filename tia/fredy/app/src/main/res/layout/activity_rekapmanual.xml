<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colour1"
    tools:context=".rekapmanual">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/logo1"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:layout_alignParentTop="true"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_presensi"
        android:gravity="center_horizontal"
        android:layout_marginTop="170dp"
        android:orientation="vertical">
        <EditText
            android:layout_width="270dp"
            android:layout_height="47dp"
            android:hint="nama"
            android:paddingLeft="30dp"
            android:background="@drawable/btn_nama"/>
        <EditText
            android:layout_width="270dp"
            android:layout_height="47dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="30dp"
            android:hint="Jabatan"
            android:background="@drawable/btn_jbtn"/>

        <ImageButton
            android:layout_width="194dp"
            android:layout_height="66dp"
            android:layout_margin="50dp"

            android:background="@drawable/smpn" />
    </LinearLayout>

</RelativeLayout>